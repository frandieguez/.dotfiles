[alias]
  a = add
  aa = add --all
  ap = add --path
  authors = !git log --pretty=format:%aN | sort | uniq -c | sort -rnhttps://github.com/dbestevez/dotfiles
  b = branch -vv
  br = branch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  c = commit
  ca = commit --amend
  changes = diff --name-status -r
  ci = commit -v
  cm = commit --message
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  df = diff --color --color-words --abbrev
  dt = difftool
  dump = cat-file -p
  filelog = log -u
  fl = log -u
  h = help
  hide = update-index --assume-unchanged
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  l = !git log --graph --pretty='tformat:%C(yellow)%h{%C(green)%ar{%C(bold blue)%an{%C(red)%d%C(reset) %s' $* | column -t -s '{' | less -FXRS
  la = !git list-aliases
  lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  list-aliases = !git config -l | grep alias | cut -c 7-
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  p = push
  pf = push --force-with-lease
  ra = log --graph --abbrev-commit --date=relative -20 --all --pretty='format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
  rh = reset --hard
  s = status --short --branch
  stl = stash list
  stp = stash pop
  type = cat-file -t
  undo = reset --soft HEAD^
  unhide = update-index --no-assume-unchanged
  up = pull
[branch]
  autosetupmerge = always
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = magenta
  untracked = green
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[core]
  filemode = false
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = trailing-space,space-before-tab
[diff]
    mnemonicprefix = true
    tool = meld
[difftool]
    prompt = false
[format]
  numbered = auto
[include]
  path = .gitconfig-additional
[log]
  decorate = short
[hooks]
  global = $HOME/.config/githooks
[merge]
  ff = only
  log = true
  tool = meld
  #tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[pager]
  color = true
  show-branch = true
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@github.com:frandieguez/"]
  insteadOf = "git://github.com/frandieguez/"
[pull]
  rebase = true
[push]
  default = current
[help]
  autocorrect = 1
[rebase]
  autosquash = true
[commit]
  tempalte = ~/.gitmessage
[user]
	name = Fran Dieguez
	email = fran.dieguez@mabishu.com
